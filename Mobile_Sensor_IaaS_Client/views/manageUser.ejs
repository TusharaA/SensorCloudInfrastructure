<!-- page content -->
<div class="right_col" role="main" ng-init="getUserDetails()">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Mange Users</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Settings 1</a>
                                </li>
                                <li><a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>

                <div class="x_content">

                    <p>User List</p>

                    <div class="table-responsive">
                        <table class="table table-striped jambo_table bulk_action">
                            <thead>
                            <tr class="headings">
                                <th>
                                    <input type="radio" id="check-all" class="flat">
                                </th>
                                <th class="column-title">Id</th>
                                <th class="column-title">Username </th>
                                <th class="column-title">Email-id </th>
                                <th class="column-title">Total Sensors</th>
                                <th class="column-title">Status</th>
                            </tr>
                            </thead>

                            <tbody>
                            <tr class="even pointer" ng-repeat="user in userInfo">
                                <td class="a-center " ng-click="manageUserStatus(user)">
                                    <input type="radio" class="flat" name="table_records">
                                </td>
                                <td class=" ">{{user.index}}</td>
                                <td class=" ">{{user.UserName}}</td>
                                <td class=" ">{{user.Emailid}}</td>
                                <td class=" ">{{user.SensorCount}}</td>
                                    <td class=" ">{{user.isActive}}</td>

                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Manage Selected User</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Settings 1</a>
                                </li>
                                <li><a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />
                    <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">

                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="username">User Name<span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" id="sensorType" name="sensorType" required="required" class="form-control col-md-7 col-xs-12" value = {{selectedUser.UserName}}>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <button type="submit" class="btn btn-primary"  id="activate" name="activate" ng-click="activate(selectedUser.UserName)">Activate</button>
                                <button type="submit" class="btn btn-success" id="deactivate" name="deactivate" ng-click="deactivate(selectedUser.UserName)">Deactivate</button>
                                <button type="submit" class="btn btn-success" id="delete" name="delete" ng-click="delete(selectedUser.UserName)">Delete</button>
                            </div>
                        </div>
                        <div class="form-group">
                            <div ng-hide = "hidemessage"><br/><br/>
                                <div align = "center"><h2 style="color:forestgreen"> {{displaymessage}}</h2></div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>


        <div class="col-md-12 col-sm-12 col-xs-12">

        </div>
    </div>
</div>
