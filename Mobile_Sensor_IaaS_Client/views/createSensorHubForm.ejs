                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="sensorhubname">Sensor Hub Name <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="sensorhubname" name="sensorhubname" ng-model="sensorhubname" type="text"
                                       placeholder="Sensor Hub Name" class="form-control col-md-7 col-xs-12" required="required">
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <button type="submit" class="btn btn-success" id="addsensorhub" name="addsensorhub" ng-click="addSensorHub()">Create Sensor Hub</button>
                            </div>
                        </div>
