                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Sensor Type</th>
                            <th>Region</th>
                            <th>Total</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr ng-repeat="sensor in sensorList">
                            <th scope="row">{{sensor.id}}</th>
                            <td>{{sensor.type}}</td>
                            <td>{{sensor.region}}</td>
                            <td >{{sensor.count}}</td>
