<!-- page content -->
<div class="right_col" role="main" ng-init="getSensorDetails()">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>List Sensors </h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Settings 1</a>
                                </li>
                                <li><a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>

                <div class="x_content">

                    <p>Edit the charges</p>

                    <div class="table-responsive" ng-controller="editSensorController">
                        <table class="table table-striped jambo_table bulk_action">
                            <thead>
                            <tr class="headings">
                                <th>
                                    <input type="radio" id="check-all" class="flat">
                                </th>
                                <th class="column-title">Id</th>
                                <th class="column-title">SensorType </th>
                                <th class="column-title">Region </th>
                                <th class="column-title">Charge Per Hour </th>
                                <th class="column-title">Edit Charge </th>
                            </tr>
                            </thead>

                            <tbody>
                            <tr class="even pointer" ng-repeat="sensor in sensorlist">
                                <td class="a-center ">
                                    <input type="radio" class="flat" name="table_records">
                                </td>
                                <td class=" ">{{sensor.index}}</td>
                                <td class=" ">{{sensor.SensorType}}</td>
                                <td class=" ">{{sensor.Region}}</td>
                                <td class=" ">{{sensor.Charge}}</td>
                                <td class="a-center ">
                                    <input type="text" class="flat" name="newCharge" ng-value="sensor.Charge" ng-model="newCharge">
                                        <button type="submit" class="btn btn-success" id="editSensor" name="editSensor" ng-click="editSensor(sensor.SensorType,sensor.Region,newCharge)">Edit Charges</button>

                                </td>
                            </tr>
                            </tbody>
                        </table>
                        <div ng-hide = "hidemessage"><br/><br/>
                            <div align = "center"><h2 style="color:forestgreen"> {{displaymessage}}</h2></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Edit Result</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Settings 1</a>
                                </li>
                                <li><a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />

                </div>
            </div>
        </div>


        <div class="col-md-12 col-sm-12 col-xs-12">

        </div>
    </div>
</div>
